# Required Environment Variables for sync_scaleway.sh

# Scaleway S3 Configuration
export SCALEWAY_ACCESS_KEY=your_scaleway_access_key_here
export SCALEWAY_SECRET_KEY=your_scaleway_secret_key_here

# Scalingo MySQL Database URL
# Format: mysql://user:password@host:port/database
# This is typically provided by Scalingo as DATABASE_URL
export DATABASE_URL=mysql://username:password@host:port/database_name

# Optional Configuration (defaults shown)
export SCALEWAY_BUCKET=lucca-analytics
export SCALEWAY_REGION=fr-par
